{
  "name": "intermezzo",
  "version": "0.1.0",
  "description": "Virtual timeline for triggering scheduled events",
  "main": "build/intermezzo.js",
  "scripts": {
    "build": "babel src -d build && ncp index.html build/index.html",
    "serve": "http-server build",
    "clean": "rimraf build",
    "watch": "npm run build && onchange \"src/*.js\" \"index.html\" -- npm run build",
    "start": "npm-run-all --parallel watch serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acmertz/intermezzo.js.git"
  },
  "keywords": [
    "timeline",
    "worker",
    "schedule",
    "event"
  ],
  "author": "Aaron Mertzenich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/acmertz/intermezzo.js/issues"
  },
  "homepage": "https://github.com/acmertz/intermezzo.js#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-latest": "^6.16.0",
    "http-server": "^0.9.0",
    "ncp": "^2.0.0",
    "npm-run-all": "^3.1.2",
    "onchange": "^3.2.0",
    "rimraf": "^2.5.4"
  }
}
